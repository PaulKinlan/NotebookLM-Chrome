{
  "$schema": "https://json.schemastore.org/chrome-manifest",
  "manifest_version": 3,
  "name": "FolioLM",
  "version": "0.6.0",
  "description": "Collect and query content from tabs, bookmarks, and history - your AI research companion",
  "permissions": [
    "storage",
    "sidePanel",
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  "optional_permissions": [
    "tabs",
    "tabGroups",
    "bookmarks",
    "history"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://api.anthropic.com https://api.openai.com https://openrouter.ai https://generativelanguage.googleapis.com https://api.groq.com https://router.huggingface.co https://huggingface.co https://api.mistral.ai https://api.together.xyz https://api.deepinfra.com https://api.perplexity.ai https://api.fireworks.ai https://api.z.ai;"
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "side_panel": {
    "default_path": "src/sidepanel/index.html"
  },
  "action": {
    "default_title": "Open FolioLM",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "Open FolioLM side panel"
    },
    "add-page-to-notebook": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Add current page to active notebook"
    },
    "create-new-notebook": {
      "suggested_key": {
        "default": "Ctrl+Shift+N",
        "mac": "Command+Shift+N"
      },
      "description": "Create a new notebook"
    },
    "add-selection-as-source": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Add selected text as a source"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content-script.ts"
      ],
      "run_at": "document_idle"
    }
  ],
  "sandbox": {
    "pages": [
      "src/sandbox/sandbox.html",
      "src/sandbox/fullscreen-sandbox.html"
    ]
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/sandbox/sandbox.html",
        "src/sandbox/fullscreen-sandbox.html",
        "src/sandbox/fullscreen-wrapper.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
