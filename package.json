{
  "name": "foliolm",
  "version": "0.2.0",
  "description": "FolioLM - Collect and query content from tabs, bookmarks, and history. Your AI research companion.",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "watch": "npm run build -- --watch",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:unit": "vitest --project unit",
    "test:integration": "vitest --project integration",
    "test:all": "vitest run --project unit && vitest run --project integration",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:coverage:integration": "vitest run --project integration --coverage",
    "package:zip": "cd dist && zip -r ../foliolm-extension-v${npm_package_version}.zip .",
    "package": "npm run package:zip",
    "version:patch": "node scripts/version.js patch",
    "version:minor": "node scripts/version.js minor",
    "version:major": "node scripts/version.js major",
    "version:set": "node scripts/version.js",
    "release:patch": "npm run version:patch && npm run build && npm run package",
    "release:minor": "npm run version:minor && npm run build && npm run package",
    "release:major": "npm run version:major && npm run build && npm run package"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.7",
    "@ai-sdk/google": "^3.0.5",
    "@ai-sdk/groq": "^3.0.4",
    "@ai-sdk/huggingface": "^1.0.4",
    "@ai-sdk/openai": "^3.0.7",
    "@ai-sdk/openai-compatible": "^2.0.4",
    "@built-in-ai/core": "^3.0.1",
    "@mozilla/readability": "^0.6.0",
    "@openrouter/ai-sdk-provider": "^1.5.4",
    "@types/marked": "^5.0.2",
    "ai": "^6.0.14",
    "dompurify": "^3.3.1",
    "marked": "^17.0.1",
    "turndown": "^7.2.0"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.28",
    "@types/chrome": "^0.0.287",
    "@types/dompurify": "^3.0.5",
    "@types/mozilla__readability": "^0.4.2",
    "@types/turndown": "^5.0.5",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "eslint": "^9.17.0",
    "fake-indexeddb": "^6.2.5",
    "happy-dom": "^20.1.0",
    "jsdom": "^27.4.0",
    "typescript": "^5.7.2",
    "vite": "^6.0.6",
    "vitest": "^4.0.16"
  },
  "overrides": {
    "@openrouter/ai-sdk-provider": {
      "ai": "^6.0.14"
    }
  }
}
