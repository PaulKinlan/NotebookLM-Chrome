{
  "name": "foliolm",
  "version": "0.2.0",
  "description": "FolioLM - Collect and query content from tabs, bookmarks, and history. Your AI research companion.",
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "dev": "vite",
    "watch": "npm run build -- --watch",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:unit": "vitest --project unit",
    "test:integration": "vitest --project integration",
    "test:all": "vitest run --project unit && vitest run --project integration",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:coverage:integration": "vitest run --project integration --coverage",
    "test:e2e": "vitest --config tests/e2e/vitest.config.ts",
    "test:e2e:headed": "HEADED=true vitest --config tests/e2e/vitest.config.ts",
    "test:e2e:headless": "HEADED=false vitest --config tests/e2e/vitest.config.ts",
    "check": "npm run typecheck && npm run lint && npm run build && npm run test:run",
    "check:e2e": "npm run check && npm run test:e2e -- --run",
    "package:zip": "cd dist && zip -r ../foliolm-extension-v${npm_package_version}.zip .",
    "package": "npm run package:zip",
    "version:patch": "node scripts/version.js patch",
    "version:minor": "node scripts/version.js minor",
    "version:major": "node scripts/version.js major",
    "version:set": "node scripts/version.js",
    "release:patch": "npm run version:patch && npm run build && npm run package",
    "release:minor": "npm run version:minor && npm run build && npm run package",
    "release:major": "npm run version:major && npm run build && npm run package"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.9",
    "@ai-sdk/google": "^3.0.6",
    "@ai-sdk/groq": "^3.0.4",
    "@ai-sdk/huggingface": "^1.0.4",
    "@ai-sdk/openai": "^3.0.8",
    "@ai-sdk/openai-compatible": "^2.0.4",
    "@built-in-ai/core": "^3.0.1",
    "@mozilla/readability": "^0.6.0",
    "@openrouter/ai-sdk-provider": "^1.5.4",
    "@types/marked": "^6.0.0",
    "ai": "^6.0.28",
    "dompurify": "^3.3.1",
    "marked": "^17.0.1",
    "turndown": "^7.2.2"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.3.0",
    "@stylistic/eslint-plugin": "^5.7.0",
    "@types/chrome": "^0.1.33",
    "@types/dompurify": "^3.2.0",
    "@types/eslint": "^9.6.1",
    "@types/jsdom": "^27.0.0",
    "@types/mozilla__readability": "^0.4.2",
    "@types/node": "^25.0.6",
    "@types/puppeteer": "^7.0.4",
    "@types/turndown": "^5.0.6",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.17",
    "eslint": "^9.39.2",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "fake-indexeddb": "^6.2.5",
    "happy-dom": "^20.1.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "puppeteer": "^24.35.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "overrides": {
    "@openrouter/ai-sdk-provider": {
      "ai": "^6.0.14"
    }
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.55.1"
  }
}
