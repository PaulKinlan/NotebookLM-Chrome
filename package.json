{
  "name": "foliolm",
  "version": "0.8.0",
  "description": "FolioLM - Collect and query content from tabs, bookmarks, and history. Your AI research companion.",
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "generate-icons": "node scripts/generate-icons.js",
    "dev": "vite",
    "watch": "npm run build -- --watch",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:unit": "vitest --project unit",
    "test:integration": "vitest --project integration",
    "test:all": "vitest run --project unit && vitest run --project integration",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:coverage:integration": "vitest run --project integration --coverage",
    "test:e2e": "vitest --config tests/e2e/vitest.config.ts",
    "test:e2e:headed": "HEADED=true vitest --config tests/e2e/vitest.config.ts",
    "test:e2e:headless": "HEADED=false vitest --config tests/e2e/vitest.config.ts",
    "check": "npm run typecheck && npm run lint && npm run build && npm run test:run",
    "check:e2e": "npm run check && npm run test:e2e -- --run",
    "package:zip": "cd dist && zip -r ../foliolm-extension-v${npm_package_version}.zip .",
    "package": "npm run package:zip"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.15",
    "@ai-sdk/google": "^3.0.10",
    "@ai-sdk/groq": "^3.0.11",
    "@ai-sdk/huggingface": "^1.0.13",
    "@ai-sdk/openai": "^3.0.12",
    "@ai-sdk/openai-compatible": "^2.0.4",
    "@built-in-ai/core": "^3.0.1",
    "@mozilla/readability": "^0.6.0",
    "@openrouter/ai-sdk-provider": "^2.0.0",
    "@preact/signals": "^2.5.1",
    "ai": "^6.0.41",
    "dompurify": "^3.3.1",
    "marked": "^17.0.1",
    "preact": "^10.28.2",
    "turndown": "^7.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@crxjs/vite-plugin": "^2.0.0-beta.28",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/npm": "^13.1.3",
    "@stylistic/eslint-plugin": "^5.7.0",
    "@testing-library/preact": "^3.2.4",
    "@types/chrome": "^0.1.34",
    "@types/eslint": "^9.6.1",
    "@types/mozilla__readability": "^0.4.2",
    "@types/node": "^25.0.9",
    "@types/turndown": "^5.0.5",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.16",
    "chrome-extension-deploy": "^3.0.0",
    "eslint": "^9.17.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "fake-indexeddb": "^6.2.5",
    "happy-dom": "^20.3.3",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "puppeteer": "^24.35.0",
    "semantic-release": "^25.0.2",
    "sharp": "^0.34.5",
    "typescript": "^5.7.2",
    "vite": "^7.3.1",
    "vitest": "^4.0.16"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "overrides": {
    "@openrouter/ai-sdk-provider": {
      "ai": "^6.0.14"
    }
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.55.2"
  }
}
